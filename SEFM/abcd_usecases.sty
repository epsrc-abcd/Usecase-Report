{
	\def\argum{#1}
	\bgroup
		\begin{figure}[H]
			\begin{center}
				\begin{sequencediagram}
}
{
				\end{sequencediagram}
			\end{center}
				\ifthenelse{ \equal {\argum} {} }{
				}{
					\caption{\argum}
				}
